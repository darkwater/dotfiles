#
# bspwm hotkeys
#

super + q
    bspc node -c

super + t
    bspc desktop -l next

super + b
    bspc node -E # broken

super + {s,d,f}
    bspc node -t {floating,tiled,fullscreen}

super + {grave,Tab}
    bspc {node,desktop} -f last

super + apostrophe
    bspc node -s last

super + m
    bspc node -s biggest

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
    bspc node -f {next,prev}

super + {comma,period}
    bspc node -C {backward,forward} # broken

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + ctrl + space
    bspc node -p cancel

super + alt + {h,j,k,l}
    bspc node -z {right -10 0,bottom 0 +10,top 0 -10,left +10 0}

super + alt + shift + {h,j,k,l}
    bspc node -z {left -10 0,top 0 +10,bottom 0 -10,right +10 0}

super + ctrl + {1-9}
    bspc node -r 0.{1-9} # broken

super + {_,shift + }{_,alt + }{1-9,0}
    bspc {desktop -f,node -d} {1,2}-{1-9,0}

#
# wm independent hotkeys
#

super + Return
    urxvtc

super + r
    dmenu_launcher run

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

XF86Audio{Lower,Raise}Volume
    volume {down,up}

{_,shift,ctrl} + Print
    screentool {png,mp4,png}

Pause
    xdotool mousemove_relative 0 9999

ctrl + Pause
    wp

Scroll_Lock
    charinfo

ctrl + Scroll_Lock
    clipswap

alt + Scroll_Lock
    nvpaste

ctrl + shift + Scroll_Lock
    pastetype

super + p
    music pick 5

alt + super + space
    lock

super + n
    urxvtc -e nvim

super + i
    urxvtc -e irssi
